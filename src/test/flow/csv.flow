version 0.1

flow CsvViewer {
	ports {
		in data/SystemArgs;
	}
	connections {
		->(transformArgs) -> (readTextFile) -> (printText) ;
	}
	operations {
		transformArgs: /org/flowdev/csvviewer/TransformArgs {
			getter	getArgs:	args ;
			setter	setFileName:	fileName ;
			create	createContainer: CsvDataContainer ;
		}
		readTextFile : base/io/ReadTextFile {
			getter	getFileName:	fileName ;
			setter	setFileContent:	fileContent ;
		}
		printText	:  /org/flowdev/csvviewer/PrintText {
			getter	getFileContent:	fileContent ;
		}
	}
}
