version 0.1

flow Getter {
  ports { in Data; }
  connections { ->(doIt); }
  operations {
    doStrings: Data {
      getter getBla: "bla" ;
      getter getBlue: "blu e" ;
      getter getBlues: "blu\r\ne" ;
      getter getEscapes: "a\rb\nc\td\u1234e\;f" ;
    }
    doInts: Data {
      getter getDec1: 1234;
      getter getDec2: 12__34;
      getter getDec3: +12_34;
      getter getDec4: -123___4;

      getter getHex1: 0x1234aF;
      getter getHex2: 0x1C2__3b4;
      getter getHex3: +0x1d2_3E4;
      getter getHex4: -0xf123___4;

      getter getBin1: 0b101001;
      getter getBin2: 0b101__111;
      getter getBin3: +0b010_111;
      getter getBin4: -0b0010___01;

      getter getOct1: 0c76543210;
      getter getOct2: 0c041__237;
      getter getOct3: +0c237_012;
      getter getOct4: -0c4567___12;
    }
    doBools: Data {
      getter getTrue: true ;
      getter getFalse: false ;
    }
    doData: Data {
      getter getDat: data ;
      getter getData: data.subdata ;
      getter getDatas: daTa0.subData1.subsubsubbyDiDumpty12349 ;
    }
    doGetFrom: Data {
      getter getFromArr: getFrom(data.arr, 0) ;
      getter getFromMap:  getFrom  (  data.map ,  "bla"  )  ;
      getter getFromMad:  getFrom  (  data.mad ,  true  )  ;
    }
  }
}

flow Setter {
  ports { in Data; }
  connections { ->(doIt); }
  operations {
    doData: Data {
      setter setDat: data ;
      setter setData: data.subdata ;
      setter setDatas: daTa0.subData1.subsubsubbyDiDumpty12349 ;
    }
    doAddTo: Data {
      setter addToArr: addTo(data.arr) ;
      setter addToList:  addTo  (  data.list )  ;
      setter addToMad:  addTo  (  data.mad    )  ;
    }
    doSetTo: Data {
      setter setToList: setTo(data.arr, 0) ;
      setter setToMap:  setTo  (  data.map ,  "bla"  )  ;
      setter setToMad:  setTo  (  data.mad ,  true  )  ;
    }
  }
}

flow Creator {
  ports { in Data; }
  connections { ->(doIt); }
  operations {
    doData: OpType {
      create createSetter:SetterData;
      create createBla:    ../blue/bla/BlaData;
      create createAbsMini:    /flowparser/mini/MiniData   ;
      create createRelMini: ../mini/MiniData ;
      create createBigRelMini: ../../flowparser/mini/MiniData ;
    }
    doType: OpType {
      create typeOfSetter:typeOf(SetterData);
      create typeOfBla: typeOf(   ../blue/bla/BlaData);
      create typeOfAbsMini: typeOf(    /flowparser/mini/MiniData) ;
      create typeOfRelMini: typeOf(  ../mini/MiniData ) ;
      create typeOfBigRelMini: typeOf(../../flowparser/mini/MiniData   )   ;
    }
  }
}

